.body{
   background-color: #fff;
   width: 100vw;
   height: 100vh;
}

.info{
   display: flex;
   flex-direction:column;
   align-items:center;
   padding-top: 40rpx;
}

.info .info-item{
   display: flex;
   justify-content: space-between;
   width: 90%;
   align-items: center;
   height: 180rpx;
   border-bottom: 4rpx solid #f3f3f3;
}

.info .info-item .image{
   width: 130rpx;
   height: 130rpx;
   border-radius: 50%;
   border:5rpx solid rgb(86, 152, 238);
}

.phone{
   display: flex;
   align-items: center;
}

.phone .input{
   position: relative;
}

.phone .input .close-icon{
   position: absolute;
   width: 30rpx;
   height: 30rpx;
   right: 40rpx;
   top:50%;
   transform:translateY(-50%);
   z-index: 10;
}

.phone .input .phone-input{
   border: 4rpx solid #d3d3d3;
   padding:15rpx 5rpx;
   margin-right: 20rpx;
   width: 300rpx;
}



.phone .edit .phone-edit{
   width: 40rpx;
   height: 40rpx;
}

.btn{
   width: 80%;
   background-color: rgb(86, 152, 238);
   color: #fff;
   margin-top: 50rpx;
}

.phone .phone-show{
   margin-right: 100rpx;
}